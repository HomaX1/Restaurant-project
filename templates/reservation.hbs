                <span id="table13" data-id="11" class="scheme-tables__item square-table"></span>
                <span id="table14" data-id="12" class="scheme-tables__item square-table"></span>
                <span id="table15" data-id="13" class="scheme-tables__item square-table"></span>
                <span id="table16" data-id="21" class="scheme-tables__item square-table"></span>
                <span id="table17" data-id="22" class="scheme-tables__item square-table"></span>
                <span id="table18" data-id="23" class="scheme-tables__item square-table"></span>
                <span id="table19" data-id="31" class="scheme-tables__item square-table"></span>
                <span id="table20" data-id="32" class="scheme-tables__item square-table"></span>
                <span id="table21" data-id="33" class="scheme-tables__item square-table"></span>

            </div>
        </div>
        <form class="form-reservation" action="#">
            <span class="scheme__text scheme__text_before">Enter information about you for feedback</span>
            <span class="form-reservation__required">* Required</span>
            <label class="form-reservation__title" for="first-name">First name*</label>
            <input class="form-reservation__input" id="first-name" type="text" name="first-name"
                   pattern="[A-Za-z]{1,50}" placeholder="First name" required>
            <label class="form-reservation__title" for="phone-number">Phone number*</label>
            <input class="form-reservation__input" id="phone-number" type="text" name="phone-number"
                   pattern="\d{3}[\-]\d{3}[\-]\d{4}" placeholder="123-456-7890" required>
            <label class="form-reservation__title" for="table-number">Table number*</label>
            <input class="form-reservation__input" id="table-number" type="text" name="table-number"
                   pattern="\d{1,2}" placeholder="1" required>
            <div class="selects-time">
                <div class="select-item">
                    <span class="form-reservation__title select-item-title">From:*</span>
                    <div class="form-select">
                        <span class="form-select__text">none</span>
                        <i class="form-select__icon fa fa-chevron-down" aria-hidden="true"></i>
                    </div>
                    <ul class="form-select-list">
                        <li class="form-select-list__item">4 pm</li>
                        <li class="form-select-list__item">5 pm</li>
                        <li class="form-select-list__item">6 pm</li>
                        <li class="form-select-list__item">7 pm</li>
                        <li class="form-select-list__item">8 pm</li>
                        <li class="form-select-list__item">9 pm</li>
                        <li class="form-select-list__item">10 pm</li>
                        <li class="form-select-list__item">11 pm</li>
                    </ul>
                </div>
                <div class="select-item">
                    <span class="form-reservation__title select-item-title">To:*</span>
                    <div class="form-select">
                        <span class="form-select__text">none</span>
                        <i class="form-select__icon fa fa-chevron-down" aria-hidden="true"></i>
                    </div>
                    <ul class="form-select-list form-select-list_right">
                        <li class="form-select-list__item">5 pm</li>
                        <li class="form-select-list__item">6 pm</li>
                        <li class="form-select-list__item">7 pm</li>
                        <li class="form-select-list__item">8 pm</li>
                        <li class="form-select-list__item">9 pm</li>
                        <li class="form-select-list__item">10 pm</li>
                        <li class="form-select-list__item">11 pm</li>
                    </ul>
                </div>
                <!-- <select id="select-from" class="select-from" name="select-from" required>
                    <option class="select-from__item" value="4 pm">4 pm</option>
                    <option class="select-from__item" value="5 pm">5 pm</option>
